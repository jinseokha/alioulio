<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.alio.ulio.view.ui.main.AlarmSendViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="23dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        tools:context=".view.ui.main.AlarmSendFragment">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/info_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="30dp"
            android:text="어떤 알람을\n보내실건가요?"
            android:textColor="@color/black_3d3d3d"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/layout_solo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <RelativeLayout
            android:id="@+id/layout_solo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/send_layout_background"
            android:layout_centerVertical="true"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/layout_couple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="parent" >

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_couple"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/layout_solo"
            android:layout_centerVertical="true"
            android:layout_marginBottom="96dp"
            android:background="@drawable/send_layout_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent" >

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>